[colors]
background = #111111
foreground = #dfdfdf
background-alt = #994444
foreground-alt = #FFFFFF
primary = #D18786
secondary = #A27B8D
alert = #ff0000
green = #00fb94
red = #ff2332
blue = #00008B
yellow = #ffd808
purple = #4B0082


[bar/mainbar0]
inherit = bar/barbase
modules-left = workspace0
[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar1]
inherit = bar/barbase
modules-left = workspace1
[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar2]
inherit = bar/barbase
modules-left = workspace2
[module/workspace2]
type = custom/script
exec = leftwm-state -w 2 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar3]
inherit = bar/barbase
modules-left = workspace3
[module/workspace3]
type = custom/script
exec = leftwm-state -w 3 -t $SCRIPTPATH/template.liquid
tail = true


[bar/barbase]
width = ${env:width}
offset-x = ${env:offsetx}
monitor = ${env:monitor}
;offset-y = ${env:y}
; width = 100%
height = 25
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = Anonymous Pro Regular:pixelsize=13;1
font-1 = Iosevka Nerd Font:pixelsize=12;1
font-2 = Iosevka Nerd Font:pixelsize=15;1
font-3 = Iosevka Nerd Font:pixelsize=20;0
modules-center = 
modules-right = memory cpu battery pulseaudio date rust
tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize

[module/ewmh]
type = internal/xworkspaces
label-active = " %icon% %name%  "
label-active-foreground = ${colors.foreground-alt}
label-active-background = ${colors.background-alt}
label-active-underline = ${colors.primary}
label-occupied = " %icon% %name%  "
label-occupied-underline = ${colors.secondary}
label-urgent = " %icon% %name%  "
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background}
label-urgent-underline  = ${colors.alert}
label-empty = " %icon% %name%  "
label-empty-foreground = ${colors.foreground}


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/rust]
type = custom/text
content = 
content-font = 3
content-background = #111
content-foreground = #B22222
content-padding = 3

;[module/menu]
;type = custom/menu

;; If true, <label-toggle> will be to the left of the menu items (default).
;; If false, it will be on the right of all the items.
;expand-right = false

;; "menu-LEVEL-N" has the same properties as "label-NAME" with
;; the additional "exec" property
;;
;; Commands will be executed using "/bin/sh -c $COMMAND"

;menu-0-0 = Browsers
;menu-0-0-exec = #menu.open.1
;menu-0-1 = Multimedia
;menu-0-1-exec = #menu.open.2

;menu-1-0 = Firefox
;menu-1-0-exec = firefox
;menu-1-1 = Chromium
;menu-1-1-exec = chromium

; [module/sysmenu]
; type = custom/text

; content = 襤
; content-foreground = ${color.fg}

; click-left = $HOME/.config/leftwm/themes/current/rofi/powermenu.sh
; click-right = $HOME/.config/leftwm/themes/current/rofi/powermenu.sh

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

; Mountpoints to display
mount-0 = /
; mount-1 = /home
;mount-2 = /var


format-background = ${colors.}
label-mounted = %{F#ffd808}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

; [module/gpu]
; type = custom/script
; exec = ~/.config/leftwm/polybar_scripts/gpu_temp.sh
; interval = 2
; format-prefix-foreground = ${colors.foreground-alt}
; format-underline = ${colors.blue}
; label = GPU %output%

[module/cpu]
type = internal/cpu
interval = 2
format-foreground = ${colors.red}
format-background = ${colors.background}
;   
format-prefix = "  "
format-prefix-foreground = #cd1f3f
; format-underline = #FF4500

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label> <ramp-coreload>

format-padding = 1

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label-font = 0
label = CPU: %percentage%%

ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-0-font = 1
ramp-coreload-0-foreground = #aaff77
ramp-coreload-1 = ▂
ramp-coreload-1-font = 1
ramp-coreload-1-foreground = #aaff77
ramp-coreload-2 = ▃
ramp-coreload-2-font = 1
ramp-coreload-2-foreground = #aaff77
ramp-coreload-3 = ▄
ramp-coreload-3-font = 1
ramp-coreload-3-foreground = #aaff77
ramp-coreload-4 = ▅
ramp-coreload-4-font = 1
ramp-coreload-4-foreground = #fba922
ramp-coreload-5 = ▆
ramp-coreload-5-font = 1
ramp-coreload-5-foreground = #fba922
ramp-coreload-6 = ▇
ramp-coreload-6-font = 1
ramp-coreload-6-foreground = #ff5555
ramp-coreload-7 = █
ramp-coreload-7-font = 1
ramp-coreload-7-foreground = #ff5555


[module/memory]
type = internal/memory
interval = 2
format-foreground = #0a6cf5
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = #0a6cf5
label =  RAM %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
; format-connected-underline = #9f78e1
format-foreground = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

; format-connected-underline = #55aa55
format-foreground = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
date = %%{F#fba922}%d/%m/%Y%%{F-}  %%{F#fba922}%H:%M
date-alt = %%{F#fba922}%A, %B %d, %Y  %%{F#fba922}%I:%M:%{F#fba922}%%{F#fba922}%S%%{F#fba922} %p
;interval = 5
;date =
;date-alt = " %Y-%m-%d"
;time = %H:%M
;time-alt = %H:%M:%S
;format-prefix = ⏱
;format-prefix-foreground = #fba922
;format-underline = #0a6cf5
;label = %date% %time%
;format-foreground = #fba922


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = #20B2AA
; format-underline = #20B2AA

label-muted = 🔇 muted
label-muted-foreground = #20B2AA

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 1
bar-volume-fill = ─
bar-volume-fill-font = 1
bar-volume-empty = ─
bar-volume-empty-font = 1
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 1
bar-volume-fill = ─
bar-volume-fill-font = 1
bar-volume-empty = ─
bar-volume-empty-font = 1
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-foreground = #55aa55
; format-charging-underline = #ffb52a

format-discharging = <animation-discharging> <label-discharging>
; format-discharging-underline = ${self.format-charging-underline}
format-discharging-foreground = #55aa55

; format-full-prefix = "   "
; format-full-prefix-foreground = #55aa55
; format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 =   
; ramp-capacity-1 =   
; ramp-capacity-2 =   
ramp-capacity-foreground = #55aa55

label-charging = %percentage%%
label-charging-font = 0
; label-charging-foreground = #55aa55
animation-charging-font = 2
animation-charging-0 =   
animation-charging-1 =   
; animation-charging-2 =   
; animation-charging-foreground = #55aa55
animation-charging-framerate = 2500

label-discharging = %percentage%%
label-discharging-font = 0
; label-discharging-foreground = #55aa55
animation-discharging-font = 2
; animation-discharging-0 =   
animation-discharging-0 =   
animation-discharging-1 =   
; animation-discharging-foreground = #55aa55
animation-discharging-framerate = 2500

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = CPU <label>
; format-underline = ${colors.blue}
format-foreground = ${colors.blue}
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.blue}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 1
margin-bottom = 0

; vim:ft=dosini
